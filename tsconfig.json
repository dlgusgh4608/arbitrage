{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", //어떤 모듈 방식으로 컴파일할지 설정
    "outDir": "./dist", //컴파일 후 js 파일들이 생성되는 곳
    "rootDir": "./src", //루트 폴더
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils/index.ts"],
      "@modules/*": ["src/modules/*"],
      "@databases/*": ["src/databases/*"],
      "@models": ["src/databases/pg/models/index.ts"],
      "@models/*": ["src/databases/pg/models/*"],
      "@apps/*": ["src/apps/*"]
    },
    "strict": true, //strict 옵션 활성화
    "moduleResolution": "node", //모듈 해석 방법 설정: 'node' (Node.js)
    "esModuleInterop": true,
    "emitDecoratorMetadata": true, // 컴파일시 데코레이터에 대한 메타데이터를 생성 (package.json -> script -> reflect-metadata)
    "experimentalDecorators": true, // typeORM 에서 데코레이터(ex. @Column())를 사용하기 위해
  }
}